<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/Style.Shadow.Bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCardBackground"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_font_smaller"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:background="@drawable/select_pop_round_button_bg"
                android:minWidth="0dp"
                android:text="@string/font_smaller"
                android:textColor="@color/colorTextDefault"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_font_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="40dp"
                android:text="16"
                android:textColor="@color/colorTextDefault"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_font_larger"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:background="@drawable/select_pop_round_button_bg"
                android:minWidth="0dp"
                android:text="@string/font_larger"
                android:textColor="@color/colorTextDefault"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_text_bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_pop_round_button_bg"
                android:minWidth="0dp"
                android:text="@string/text_bold"
                android:textColor="@color/colorTextDefault"
                android:textSize="14sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_text_font"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_pop_round_button_bg"
                android:minWidth="0dp"
                android:text="@string/select_font"
                android:textColor="@color/colorTextDefault"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/view_page_anim_mode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_page_cover"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_pop_round_button_bg"
                android:minWidth="0dp"
                android:tag="0"
                android:text="@string/page_anim_cover"
                android:textColor="@color/colorTextDefault"
                android:textSize="14sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_page_simulation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_pop_round_button_bg"
                android:minWidth="0dp"
                android:tag="1"
                android:text="@string/page_anim_simulation"
                android:textColor="@color/colorTextDefault"
                android:textSize="14sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_page_slide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_pop_round_button_bg"
                android:minWidth="0dp"
                android:tag="2"
                android:text="@string/page_anim_slide"
                android:textColor="@color/colorTextDefault"
                android:textSize="14sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_page_none"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_pop_round_button_bg"
                android:minWidth="0dp"
                android:tag="3"
                android:text="@string/page_anim_none"
                android:textColor="@color/colorTextDefault"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/view_page_space"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_read_space1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_pop_round_button_bg"
                android:src="@drawable/b4_space1"
                android:tag="0"
                android:tint="@color/colorTextDefault"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_read_space2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_pop_round_button_bg"
                android:src="@drawable/b4_space2"
                android:tag="1"
                android:tint="@color/colorTextDefault"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_read_space3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_pop_round_button_bg"
                android:src="@drawable/b4_space3"
                android:tag="2"
                android:tint="@color/colorTextDefault"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_read_space_none"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_pop_round_button_bg"
                android:minWidth="0dp"
                android:tag="3"
                android:text="@string/page_read_space_default"
                android:textColor="@color/colorTextDefault"
                android:textSize="14sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_read_space_custom"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_pop_round_button_bg"
                android:tag="4"
                android:tint="@color/colorTextDefault"
                app:srcCompat="@drawable/ic_add_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_bg_white"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="背景1"
                    android:src="@color/colorBackground"
                    app:civ_border_color="@color/colorTextDefault"
                    app:civ_border_width="1dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/text"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </FrameLayout>


            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_bg_yellow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="背景2"
                    android:src="@color/colorBackground"
                    app:civ_border_color="@color/colorTextDefault"
                    app:civ_border_width="1dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/text"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </FrameLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_bg_green"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="背景3"
                    android:src="@color/colorBackground"
                    app:civ_border_color="@color/colorTextDefault"
                    app:civ_border_width="1dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/text"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </FrameLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_bg_blue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="背景4"
                    android:src="@color/colorBackground"
                    app:civ_border_color="@color/colorTextDefault"
                    app:civ_border_width="1dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/text"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </FrameLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_bg_black"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="背景5"
                    android:src="@color/colorBackground"
                    app:civ_border_color="@color/colorTextDefault"
                    app:civ_border_width="1dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/text"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </FrameLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>


