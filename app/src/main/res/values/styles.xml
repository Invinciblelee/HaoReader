<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorTextSecondary</item>
        <item name="colorButtonNormal">@color/colorTextSecondary</item>
        <item name="actionOverflowMenuStyle">@style/AppTheme.PopupMenu.Overflow</item>
        <item name="actionOverflowButtonStyle">@style/Overflow.Menu.Button</item>
        <item name="textAppearanceLargePopupMenu">@style/Overflow.Menu.Text</item>
        <item name="android:listDivider">@drawable/bg_list_divider</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
        <item name="android:textColorPrimary">@color/colorTextDefault</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:textColorAlertDialogListItem">@color/colorTextDefault</item>
        <item name="alertDialogTheme">@style/Style.Dialog</item>
        <item name="android:alertDialogTheme">@style/Style.Dialog</item>
    </style>


    <style name="AppTheme.Activity" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
    </style>

    <style name="AppTheme.Activity.Search" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
    </style>

    <style name="AppTheme.Activity.BookDetail" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Activity.Welcome" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_welcome_drawable</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Animation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_alpha_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_alpha_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_right_out</item>
    </style>

    <style name="AppTheme.Activity.Permission" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark">

    </style>
    <style name="AppTheme.AppBarOverlay.Light" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="AppTheme.PopupMenu.Overflow" parent="Widget.AppCompat.PopupMenu">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:colorBackground">@color/colorCardBackground</item>
    </style>

    <style name="Overflow.Menu.Text" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/colorMenuText</item>
    </style>

    <style name="Overflow.Menu.Button" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorBarText</item>
    </style>

    <style name="AppTheme.Navigation.Text" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.CardView.Background" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.CardView.Image" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="android:layout_marginLeft">@dimen/card_item_margin</item>
        <item name="android:layout_marginRight">@dimen/card_item_margin</item>
        <item name="android:layout_marginTop">@dimen/card_item_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_item_margin</item>
    </style>

    <style name="AppTheme.CardView.Item" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="cardElevation">1dp</item>
        <item name="android:layout_marginLeft">@dimen/card_item_margin</item>
        <item name="android:layout_marginRight">@dimen/card_item_margin</item>
        <item name="android:layout_marginTop">@dimen/half_card_item_margin</item>
        <item name="android:layout_marginBottom">@dimen/half_card_item_margin</item>
    </style>

    <style name="AppTheme.CardView.Item.Half" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:layout_marginLeft">@dimen/half_card_item_margin</item>
        <item name="android:layout_marginRight">@dimen/half_card_item_margin</item>
        <item name="android:layout_marginTop">@dimen/half_card_item_margin</item>
        <item name="android:layout_marginBottom">@dimen/half_card_item_margin</item>
    </style>

    <style name="AppTheme.TextView.Marquee" parent="android:Widget">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="AppTheme.ScaleDrawableTextView">
        <item name="drawableSize">16sp</item>
    </style>

    <style name="Widget.AppCompat.CompoundButton.Light" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/light_gray</item>
    </style>

    <style name="TextAppearance.AppCompat.Tab" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Animation.Pop.AddShelf" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_checkaddshelf_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_checkaddshelf_out</item>
    </style>

    <style name="Animation.Pop.Grow" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_windowlight_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_windowlight_out</item>
    </style>

    <style name="Animation.Pop.Sheet" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_windowslide_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_windowslide_out</item>
    </style>

    <style name="Animation.Pop.Slide" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_top_out</item>
    </style>

    <style name="Animation.Dialog" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_out</item>
    </style>

    <style name="Style.Dialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog_background</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.Dialog</item>
    </style>

    <style name="Style.Custom.Dialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@color/transparent</item>
        <item name="android:windowContentOverlay">@color/transparent</item>
        <item name="android:windowElevation">0dp</item>
        <item name="android:windowAnimationStyle">@style/Animation.Dialog</item>
    </style>

    <style name="Style.Line" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@drawable/bg_list_divider</item>
    </style>

    <style name="Style.Shadow.Top" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_shadow_height</item>
        <item name="android:background">@drawable/bg_shadow_top</item>
    </style>

    <style name="Style.Shadow.Bottom" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_shadow_height</item>
        <item name="android:background">@drawable/bg_shadow_bottom</item>
    </style>
</resources>